<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WearMe.Views.MainPage"
             xmlns:vm="clr-namespace:WearMe.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:MainPageViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
     
        <ScrollView Grid.Row="2">
            <StackLayout Orientation="Vertical" Padding="90,24,30,24" Spacing="10">
                <Label Text="Witamy w Wear Me" FontSize="Title"/>
                <Label Text="Miejscu, w którym twoje ubrania mogą odmienić czyjeś życie!" FontSize="16" Padding="0,0,0,0"/>
            </StackLayout>
        </ScrollView>
        <StackLayout Grid.Row="3" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                <ContentView Padding="0,40,0,40" VerticalOptions="FillAndExpand">
                    <Button VerticalOptions="Center" Text="Zaczynamy" Command="{Binding StartAppCommand}"/>
                </ContentView>
            </StackLayout>
        </StackLayout>

    </Grid>

</ContentPage>
