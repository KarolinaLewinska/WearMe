<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WearMe.Views.AdvertsListPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:WearMe.ViewModels"  
             xmlns:model="clr-namespace:WearMe.Models"  
             x:Name="AdvertsPage">

    <RefreshView x:DataType="local:AdvertsListViewModel" Command="{Binding LoadAdvertsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
        <CollectionView x:Name="AdvertsListView" ItemsSource="{Binding Adverts}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" x:DataType="model:Advert" BackgroundColor="#F6F6F6">
                        <Label Text="{Binding Title}" 
                            LineBreakMode="NoWrap" 
                            FontSize="16" />
                        <Label Text="{Binding Category}" 
                            LineBreakMode="NoWrap"
                            FontSize="13" />
                        <Image Source="{Binding Photo}"/>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer 
                                NumberOfTapsRequired="1"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:AdvertsListViewModel}}, Path=AdvertTapped}"		
                                CommandParameter="{Binding .}">
                            </TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
